                { icon: '🌱', name: 'büyüme growth plant' },
                { icon: '🔝', name: 'zirve top peak' },
                { icon: '💡', name: 'inovasyon innovation idea' },
                { icon: '⚡', name: 'dinamizm dynamism energy' },
                { icon: '👥', name: 'takım team people' },
