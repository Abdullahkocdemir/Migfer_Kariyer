@model Migfer_Kariyer.Entities.AboutList
@{
    ViewData["Title"] = "Hakkımızda Bilgisi Detayları";
    Layout = "~/Views/Layout/Index.cshtml";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
        color: #ffffff;
        min-height: 100vh;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(15px);
        border: 2px solid #00ffff;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.3);
    }

    .header {
        text-align: center;
        margin-bottom: 40px;
        padding-bottom: 20px;
        border-bottom: 3px solid #667eea;
    }

        .header h1 {
            color: #00ffff;
            font-size: 2.5rem;
            margin-bottom: 10px;
            text-shadow: 0 0 15px #00ffff;
        }

    .back-link {
        margin-bottom: 30px;
    }

        .back-link a {
            color: #667eea;
            text-decoration: none;
            font-weight: bold;
            font-size: 16px;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

            .back-link a:hover {
                color: #764ba2;
                transform: translateX(-5px);
            }

    .about-preview {
        background: linear-gradient(135deg, #17a2b8, #138496);
        color: white;
        border-radius: 15px;
        padding: 40px;
        margin-bottom: 30px;
        text-align: center;
        box-shadow: 0 10px 30px rgba(23, 162, 184, 0.3);
    }

    .about-icon-large {
        font-size: 5rem;
        margin-bottom: 20px;
        text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
        background: rgba(255, 255, 255, 0.2);
        width: 130px;
        height: 130px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    }

    .about-title-large {
        font-size: 2.8rem;
        font-weight: bold;
        margin-bottom: 15px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .about-description-large {
        font-size: 1.3rem;
        opacity: 0.95;
        line-height: 1.7;
        max-width: 700px;
        margin: 0 auto;
        text-align: justify;
    }

    .detail-card {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 20px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }

        .detail-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }

    .info-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding: 15px 0;
        border-bottom: 1px solid #dee2e6;
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .info-label {
        font-weight: bold;
        color: #495057;
        flex: 1;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 16px;
    }

    .info-value {
        flex: 2;
        text-align: right;
        color: #2c3e50;
        font-weight: 500;
        font-size: 16px;
        word-break: break-word;
    }

    .empty-value {
        color: #6c757d;
        font-style: italic;
        font-size: 14px;
    }

    .description-section {
        background: linear-gradient(135deg, #e3f2fd, #f0f9ff);
        border: 2px solid #17a2b8;
        border-radius: 15px;
        padding: 30px;
        margin-top: 30px;
    }

    .description-title {
        color: #17a2b8;
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .description-content {
        color: #2c3e50;
        font-size: 16px;
        line-height: 1.8;
        text-align: justify;
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 3px 15px rgba(0,0,0,0.1);
        max-height: 400px;
        overflow-y: auto;
    }

        .description-content::-webkit-scrollbar {
            width: 8px;
        }

        .description-content::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }

        .description-content::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, #17a2b8, #138496);
            border-radius: 10px;
        }

    .stats-section {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .stat-box {
        flex: 1;
        background: linear-gradient(135deg, #17a2b8, #138496);
        color: white;
        padding: 20px;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(23, 162, 184, 0.3);
    }

    .stat-number {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .actions {
        text-align: center;
        margin-top: 40px;
        padding-top: 30px;
        border-top: 2px solid #dee2e6;
    }

    .btn {
        display: inline-block;
        padding: 12px 30px;
        margin: 0 10px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }

    .btn-secondary {
        background: linear-gradient(135deg, #6c757d, #495057);
        color: white;
    }

        .btn-secondary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(108, 117, 125, 0.4);
        }

    .btn-danger {
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: white;
    }

        .btn-danger:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(220, 53, 69, 0.4);
        }

    @@media (max-width: 768px) {
        .info-row

    {
        flex-direction: column;
        gap: 10px;
    }

    .info-value {
        text-align: left;
    }

    .container {
        margin: 10px;
        padding: 20px;
    }

    .header h1 {
        font-size: 2rem;
    }

    .about-title-large {
        font-size: 2.2rem;
    }

    .about-icon-large {
        font-size: 4rem;
        width: 110px;
        height: 110px;
    }

    .stats-section {
        flex-direction: column;
    }

    }
</style>

<div class="container">
    <div class="back-link">
        <a asp-action="Index">
            ← Hakkımızda Bilgileri Listesine Dön
        </a>
    </div>

    <div class="header">
        <h1>ℹ️ Hakkımızda Bilgisi Detayları</h1>
    </div>

    <!-- About Preview -->
    <div class="about-preview">
        <div class="about-icon-large">
            @if (!string.IsNullOrEmpty(Model.Ikon))
            {
                @Html.Raw(Model.Ikon)
            }
            else
            {
                <span>ℹ️</span>
            }
        </div>
        <div class="about-title-large">
            @Model.Başlık
        </div>
        @if (!string.IsNullOrEmpty(Model.Açıklama))
        {
            <div class="about-description-large">
                @(Model.Açıklama.Length > 300 ? Model.Açıklama.Substring(0, 300) + "..." : Model.Açıklama)
            </div>
        }
    </div>

    <!-- Stats Section -->
    <div class="stats-section">
        <div class="stat-box">
            <div class="stat-number">@Model.Başlık.Length</div>
            <div class="stat-label">📝 Başlık Karakter</div>
        </div>
        <div class="stat-box">
            <div class="stat-number">@(Model.Açıklama?.Length ?? 0)</div>
            <div class="stat-label">📄 Açıklama Karakter</div>
        </div>
        <div class="stat-box">
            <div class="stat-number">@(Model.Ikon?.Length ?? 0)</div>
            <div class="stat-label">🎨 İkon Karakter</div>
        </div>
    </div>

    <!-- Detailed Information -->
    <div class="detail-card">
        <div class="info-row">
            <div class="info-label">
                🆔 ID Numarası
            </div>
            <div class="info-value">
                #@Model.Id
            </div>
        </div>

        <div class="info-row">
            <div class="info-label">
                📝 Başlık
            </div>
            <div class="info-value">
                @if (!string.IsNullOrEmpty(Model.Başlık))
                {
                    <strong>@Model.Başlık</strong>
                }
                else
                {
                    <span class="empty-value">Başlık belirtilmemiş</span>
                }
            </div>
        </div>

        <div class="info-row">
            <div class="info-label">
                🎨 İkon Kodu
            </div>
            <div class="info-value">
                @if (!string.IsNullOrEmpty(Model.Ikon))
                {
                    <code style="background: #f8f9fa; color: #e83e8c; padding: 4px 8px; border-radius: 4px;">@Model.Ikon</code>
                }
                else
                {
                    <span class="empty-value">İkon belirtilmemiş</span>
                }
            </div>
        </div>

        <div class="info-row">
            <div class="info-label">
                📏 Karakter Limitleri
            </div>
            <div class="info-value">
                <div style="font-size: 14px;">
                    <div>📝 Başlık: <strong>@Model.Başlık.Length</strong>/30 karakter</div>
                    <div>📄 Açıklama: <strong>@(Model.Açıklama?.Length ?? 0)</strong>/2000 karakter</div>
                    <div>🎨 İkon: <strong>@(Model.Ikon?.Length ?? 0)</strong>/30 karakter</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Full Description Section -->
    @if (!string.IsNullOrEmpty(Model.Açıklama))
    {
        <div class="description-section">
            <div class="description-title">
                📖 Tam Açıklama
            </div>
            <div class="description-content">
                @Model.Açıklama
            </div>
        </div>
    }

    <!-- Actions -->
    <div class="actions">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            ✏️ Düzenle
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            📋 Listeye Dön
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"
           onclick="return confirm('Bu hakkımızda bilgisini silmek istediğinizden emin misiniz?')">
            🗑️ Sil
        </a>
    </div>
</div>