@model Migfer_Kariyer.Entities.AboutText
@{
    ViewData["Title"] = "Hakkımızda Metni Detayları";
    Layout = "~/Views/Layout/Index.cshtml";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
        color: #ffffff;
        min-height: 100vh;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(15px);
        border: 2px solid #00ffff;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.3);
    }

    .header {
        text-align: center;
        margin-bottom: 40px;
        padding-bottom: 20px;
        border-bottom: 3px solid #667eea;
    }

        .header h1 {
            color: #00ffff;
            font-size: 2.5rem;
            margin-bottom: 10px;
            text-shadow: 0 0 15px #00ffff;
        }

    .back-link {
        margin-bottom: 30px;
    }

        .back-link a {
            color: #00ffff;
            text-decoration: none;
            font-weight: bold;
            font-size: 16px;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

            .back-link a:hover {
                color: #ff00ff;
                text-shadow: 0 0 10px #ff00ff;
                transform: translateX(-5px);
            }

    .info-section {
        display: grid;
        grid-template-columns: 1fr;
        gap: 30px;
        margin-bottom: 40px;
    }

    .basic-info {
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.1), rgba(255, 0, 255, 0.05));
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        border: 1px solid rgba(0, 255, 255, 0.3);
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .info-label {
        font-weight: bold;
        color: #00ff00;
        flex: 1;
        display: flex;
        align-items: center;
        gap: 10px;
        text-shadow: 0 0 5px #00ff00;
    }

    .info-value {
        flex: 2;
        text-align: right;
        color: #ffffff;
        font-weight: 500;
    }

    .status-badges {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: bold;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .badge.active {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            animation: pulse 2s infinite;
        }

        .badge.inactive {
            background: linear-gradient(135deg, #dc3545, #fd7e14);
            color: white;
        }

    @@keyframes pulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    100% {
        transform: scale(1);
    }

    }

    .description-section {
        background: rgba(255, 255, 255, 0.03);
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 20px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        border-left: 5px solid #ff00ff;
    }

    .description-title {
        color: #ff00ff;
        font-size: 1.4rem;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
        text-shadow: 0 0 10px #ff00ff;
    }

    .description-content {
        color: #ffffff;
        line-height: 1.8;
        font-size: 16px;
        background: rgba(255, 255, 255, 0.05);
        padding: 20px;
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .empty-description {
        color: #6c757d;
        font-style: italic;
        text-align: center;
        padding: 40px;
        background: rgba(255, 255, 255, 0.03);
        border: 2px dashed rgba(255, 255, 255, 0.1);
        border-radius: 10px;
    }

    .metadata-section {
        background: rgba(255, 255, 0, 0.05);
        border: 1px solid rgba(255, 255, 0, 0.3);
        padding: 20px;
        border-radius: 15px;
        margin-bottom: 30px;
    }

    .metadata-title {
        color: #ffff00;
        font-size: 1.2rem;
        margin-bottom: 15px;
        text-shadow: 0 0 5px #ffff00;
    }

    .metadata-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }

    .metadata-item {
        background: rgba(255, 255, 255, 0.05);
        padding: 15px;
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .metadata-label {
        color: #cccccc;
        font-size: 12px;
        text-transform: uppercase;
        margin-bottom: 5px;
    }

    .metadata-value {
        color: #ffffff;
        font-weight: bold;
        font-size: 14px;
    }

    .actions {
        text-align: center;
        margin-top: 40px;
        padding-top: 30px;
        border-top: 2px solid #00ffff;
    }

    .btn {
        display: inline-block;
        padding: 12px 30px;
        margin: 0 10px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }

    .btn-primary {
        background: linear-gradient(135deg, #00ffff, #0080ff);
        color: #000;
    }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 255, 255, 0.4);
        }

    .btn-secondary {
        background: linear-gradient(135deg, #6c757d, #495057);
        color: white;
    }

        .btn-secondary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(108, 117, 125, 0.4);
        }

    .btn-danger {
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: white;
    }

        .btn-danger:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(220, 53, 69, 0.4);
        }

    @@media (max-width: 768px) {
        .info-row

    {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
    }

    .info-value {
        text-align: left;
    }

    .metadata-grid {
        grid-template-columns: 1fr;
    }

    .container {
        margin: 10px;
        padding: 20px;
    }

    .header h1 {
        font-size: 2rem;
    }

    }
</style>

<div class="container">
    <div class="back-link">
        <a asp-action="Index">
            ← Hakkımızda Metinleri Listesine Dön
        </a>
    </div>

    <div class="header">
        <h1>📝 @Model.Başlık</h1>
    </div>

    <!-- Temel Bilgiler -->
    <div class="info-section">
        <div class="basic-info">
            <div class="info-row">
                <div class="info-label">
                    🆔 Kayıt ID
                </div>
                <div class="info-value">
                    #@Model.Id
                </div>
            </div>

            <div class="info-row">
                <div class="info-label">
                    📌 Başlık
                </div>
                <div class="info-value">
                    @Model.Başlık
                </div>
            </div>

            <div class="info-row">
                <div class="info-label">
                    📝 Açıklama Uzunluğu
                </div>
                <div class="info-value">
                    @Model.Açıklama.Length karakter
                </div>
            </div>

            <div class="info-row">
                <div class="info-label">
                    🏷️ Durum
                </div>
                <div class="info-value">
                    <div class="status-badges">
                        @if (Model.IsActive)
                        {
                            <span class="badge active">✅ Aktif</span>
                        }
                        else
                        {
                            <span class="badge inactive">❌ Pasif</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Metadata -->
    <div class="metadata-section">
        <div class="metadata-title">📊 İstatistikler</div>
        <div class="metadata-grid">
            <div class="metadata-item">
                <div class="metadata-label">Başlık Uzunluğu</div>
                <div class="metadata-value">@Model.Başlık.Length / 30 karakter</div>
            </div>
            <div class="metadata-item">
                <div class="metadata-label">Açıklama Uzunluğu</div>
                <div class="metadata-value">@Model.Açıklama.Length karakter</div>
            </div>
            <div class="metadata-item">
                <div class="metadata-label">Durum</div>
                <div class="metadata-value">@(Model.IsActive ? "Yayında" : "Taslak")</div>
            </div>
        </div>
    </div>

    <!-- Açıklama İçeriği -->
    <div class="description-section">
        <div class="description-title">
            📖 Açıklama İçeriği
        </div>
        @if (!string.IsNullOrEmpty(Model.Açıklama))
        {
            <div class="description-content">
                @Html.Raw(Model.Açıklama)
            </div>
        }
        else
        {
            <div class="empty-description">
                📝 Henüz açıklama içeriği eklenmemiş
            </div>
        }
    </div>

    <!-- Actions -->
    <div class="actions">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            ✏️ Düzenle
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            📋 Listeye Dön
        </a>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;"
              onsubmit="return confirm('Bu metni silmek istediğinizden emin misiniz?')">
            <button type="submit" class="btn btn-danger">
                🗑️ Sil
            </button>
        </form>
    </div>
</div>

<script>
    // Smooth scroll effect for better UX
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });

    // Karakter sayısı göstergesi için renk kodlaması
    document.addEventListener('DOMContentLoaded', function() {
        const baslikLength = @Model.Başlık.Length;
        const aciklamaLength = @Model.Açıklama.Length;

        // Başlık uzunluğu kontrolü (30 karakter limit)
        const baslikItems = document.querySelectorAll('.metadata-item');
        baslikItems.forEach(item => {
            const label = item.querySelector('.metadata-label');
            const value = item.querySelector('.metadata-value');

            if (label && label.textContent === 'Başlık Uzunluğu') {
                if (baslikLength >= 25) {
                    value.style.color = '#ff4040';
                } else if (baslikLength >= 20) {
                    value.style.color = '#ffaa00';
                } else {
                    value.style.color = '#00ff00';
                }
            }
        });
    });
</script>