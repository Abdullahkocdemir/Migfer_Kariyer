<!-- Views/Instructor/Index.cshtml - KORKUNÇ EĞİTMEN LİSTESİ -->
@model IEnumerable<Migfer_Kariyer.Entities.Instructor>

<h1 style="font-family: Wingdings; font-size: 40px; color: purple; text-align: center; text-shadow: 3px 3px yellow; background: linear-gradient(rainbow); padding: 20px;">
    👨‍🏫🎓 EĞİTMENLER LİSTESİ 🎓👩‍🏫
</h1>

<center>
    <img src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 20'%3E%3Ctext y='15' font-size='20'%3E🌟✨🌟✨🌟✨🌟✨🌟✨🌟✨🌟✨🌟✨🌟✨🌟✨%3C/text%3E%3C/svg%3E" style="width: 100%; height: 30px;" />
</center>

<marquee direction="right" scrollamount="10">
    <a href="/Instructor/Create" style="background: linear-gradient(45deg, red, orange, yellow, green, blue, indigo, violet); color: white; padding: 20px; font-size: 24px; text-decoration: none; border-radius: 50px; box-shadow: 10px 10px 20px black; animation: pulse 2s infinite;">
        ➕ YENİ EĞİTMEN EKLE ➕
    </a>
</marquee>

<div style="display: flex; flex-wrap: wrap; justify-content: space-around; margin: 20px;">
    @foreach (var instructor in Model)
    {
        <div style="width: 300px; margin: 15px; border: 8px solid rainbow; border-radius: 25px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 20px; box-shadow: 0 0 30px purple; transform: rotate(@(new Random().Next(-5, 5))deg);">

            <h3 style="text-align: center; font-family: Impact; font-size: 22px; color: yellow; text-shadow: 2px 2px black; margin-bottom: 15px; text-decoration: underline;">
                👤 @instructor.NameSurname
            </h3>

            <div style="background: rgba(255,255,255,0.2); padding: 15px; border-radius: 15px; margin: 10px 0;">
                <p style="font-size: 16px; margin: 8px 0; color: lightgreen;">
                    <strong style="color: gold;">👥 Öğrenci Sayısı:</strong>
                    <span style="background: black; color: lime; padding: 5px; border-radius: 10px;">@instructor.StudentCount</span>
                </p>

                <p style="font-size: 16px; margin: 8px 0; color: lightblue;">
                    <strong style="color: orange;">📅 Deneyim:</strong>
                    <span style="background: darkblue; color: white; padding: 5px; border-radius: 10px;">@instructor.Experience</span>
                </p>

                <div style="margin: 15px 0;">
                    <strong style="color: pink; font-size: 18px;">🎯 Uzmanlık Alanları:</strong>
                    <div style="margin-top: 10px;">
                        @foreach (var spec in instructor.InstructorFieldofSpecializations)
                        {
                            <span style="background: linear-gradient(45deg, red, blue); color: white; padding: 8px 12px; margin: 3px; border-radius: 20px; display: inline-block; font-size: 14px; font-weight: bold; box-shadow: 2px 2px 5px black;">
                                🏷️ @spec.FieldofSpecialization?.Name
                            </span>
                        }
                    </div>
                </div>
            </div>

            <div style="text-align: center; margin-top: 20px;">
                <a href="/Instructor/Details/@instructor.InstructorId" style="background: blue; color: white; padding: 10px 15px; margin: 5px; text-decoration: none; border-radius: 15px; font-weight: bold; box-shadow: 3px 3px 6px black;">👁️ DETAY</a>
                <a href="/Instructor/Edit/@instructor.InstructorId" style="background: orange; color: black; padding: 10px 15px; margin: 5px; text-decoration: none; border-radius: 15px; font-weight: bold; box-shadow: 3px 3px 6px black;">✏️ DÜZENLE</a>
                <form method="post" action="/Instructor/Delete/@instructor.InstructorId" style="display: inline;">
                    <button type="submit" onclick="return confirm('🗑️ Silmek istediğinizden emin misiniz? 🗑️')" style="background: red; color: white; padding: 10px 15px; margin: 5px; border: none; border-radius: 15px; font-weight: bold; cursor: pointer; box-shadow: 3px 3px 6px black;">🗑️ SİL</button>
                </form>
            </div>
        </div>
    }
</div>

<style>
    @@keyframes pulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.1);
    }

    100% {
        transform: scale(1);
    }

    }

    body {
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ff6b6b' fill-opacity='0.1'%3E%3Ccircle cx='30' cy='30' r='4'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        animation: rainbow 5s infinite;
    }

    @@keyframes rainbow {
        0%

    {
        filter: hue-rotate(0deg);
    }

    100% {
        filter: hue-rotate(360deg);
    }

    }
</style>