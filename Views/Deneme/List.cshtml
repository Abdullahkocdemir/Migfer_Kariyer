@using Migfer_Kariyer.Entities
@model List<Instructor>

@{
    ViewData["Title"] = "Eğitmen Listesi";
    Layout = "~/Views/Layout/Index.cshtml";
}
<style>
    .specialization-badge {
        display: inline-block;
        background-color: #e0f7fa;
        color: #00796b;
        padding: 5px 10px;
        margin: 2px 4px 2px 0;
        border-radius: 15px;
        font-size: 13px;
        font-weight: 500;
        line-height: 1.4;
    }
    .status {
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 13px;
        display: inline-block;
        line-height: 1.3;
        color: white;
    }

        .status.active {
            background-color: #1b5e20; /* Koyu yeşil */
            border: 1px solid #145a17;
        }

        .status.passive {
            background-color: #b71c1c; /* Koyu kırmızı */
            border: 1px solid #a31818;
        }





</style>


<!-- Instructors Table -->
<div class="data-table">
    <div class="table-header">
        <div class="table-title">Eğitmen Kadrosu</div>
        <a href="/Deneme/Index" class="add-btn">+ Yeni Eğitmen</a>
    </div>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Ad Soyad</th>
                <th>E-posta</th>
                <th>Telefon Numarası</th>
                <th>Uzmanlık</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.InstructorId</td>
                    <td>@item.NameSurname</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        @foreach (var specialization in item.InstructorFieldofSpecializations)
                        {
                            <span class="specialization-badge">
                                @specialization.FieldofSpecialization?.Name
                            </span>
                        }
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="status active">Aktif</span>
                        }
                        else
                        {
                            <span class="status passive">Pasif</span>
                        }
                    </td>

                    <td>
                        <a href="/Deneme/Edit/@item.InstructorId" class="action-btn view-btn">Görüntüle</a>
                        <a href="#" class="action-btn edit-btn">Düzenle</a>
                        <a href="#" class="action-btn delete-btn">Sil</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
</div>

