@using Migfer_Kariyer.Entities
@model List<Education>
@{
    ViewData["Title"] = "Eğitim Listesi";
    Layout = "~/Views/Layout/Index.cshtml";
}

<style>
    .feature-badge {
        display: inline-block;
        background-color: #e3f2fd;
        color: #0277bd;
        padding: 5px 10px;
        margin: 2px 4px 2px 0;
        border-radius: 15px;
        font-size: 13px;
        font-weight: 500;
        line-height: 1.4;
    }

    .popular-badge {
        display: inline-block;
        background-color: #fff3e0;
        color: #f57c00;
        padding: 5px 10px;
        margin: 2px 4px 2px 0;
        border-radius: 15px;
        font-size: 13px;
        font-weight: 500;
        line-height: 1.4;
    }

    .status {
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 13px;
        display: inline-block;
        line-height: 1.3;
        color: white;
    }

        .status.active {
            background-color: #1b5e20; /* Koyu yeşil */
            border: 1px solid #145a17;
        }

        .status.passive {
            background-color: #b71c1c; /* Koyu kırmızı */
            border: 1px solid #a31818;
        }



    .success-message {
        background-color: #d4edda;
        color: #155724;
        padding: 15px 20px;
        margin: 20px 30px;
        border-radius: 8px;
        border: 1px solid #c3e6cb;
        font-weight: 500;
    }
</style>

<!-- Education Table -->
<div class="data-table">
    <div class="table-header">
        <div class="table-title">📚 Eğitim Programları</div>
        <a asp-action="Create" class="add-btn">+ Yeni Eğitim Ekle</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="success-message">
            ✅ @TempData["SuccessMessage"]
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Eğitim Bilgileri</th>
                    <th>Eğitmen</th>
                    <th>Kurs Detayları</th>
                    <th>Özellik</th>
                    <th>Popüler</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <div class="education-name">@item.Name</div>
                        </td>
                        <td>
                            <span class="instructor-info">@(item.Instructor?.NameSurname ?? "Belirtilmemiş")</span>
                        </td>
                        <td>
                            <div class="course-stats">
                                <span class="stat-item">👥 @item.StudentCount öğrenci</span>
                                <span class="stat-item">⏱️ @item.CourseHours saat</span>
                                <span class="stat-item">🌐 @item.Language</span>
                            </div>
                        </td>
                        <td>
                            @if (item.Feature != null)
                            {
                                <span class="feature-badge">
                                    @item.Feature.Name
                                </span>
                            }
                            else
                            {
                                <span class="feature-badge">Belirtilmemiş</span>
                            }
                        </td>
                        <td>
                            @if (item.IsPopularCourse)
                            {
                                <span class="popular-badge">🔥 Popüler</span>
                            }
                            else
                            {
                                <span style="color: #6c757d; font-size: 13px;">Standart</span>
                            }
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="status active">Aktif</span>
                            }
                            else
                            {
                                <span class="status passive">Pasif</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="action-btn view-btn">Görüntüle</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn edit-btn">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn delete-btn">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="empty-state">
            <h4>📚 Henüz eğitim programı eklenmemiş</h4>
            <p>İlk eğitim programınızı eklemek için aşağıdaki butona tıklayın.</p>
            <a asp-action="Create" class="add-btn">📚 İlk Eğitimi Ekle</a>
        </div>
    }
</div>