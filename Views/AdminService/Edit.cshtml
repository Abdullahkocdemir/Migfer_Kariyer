    <script>
        let maddelerCounter = 0;
        let iconPanelExpanded = false;

        // İkon seçme fonksiyonu
        function setIcon(iconCode) {
            document.querySelector('input[name="İkon"]').value = iconCode;
            document.querySelector('input[name="İkon"]').focus();
        }

        // İkon panelini genişlet/daralt
        function toggleIconPanel() {
            const iconExamples = document.getElementById('iconExamples');
            iconPanelExpanded = !iconPanelExpanded;

            if (iconPanelExpanded) {
                iconExamples.style.maxHeight = '600px';
            } else {
                iconExamples.style.maxHeight = '150px';
            }
        }

        // İkon arama fonksiyonu
        function filterIcons() {
            const searchTerm = document.getElementById('iconSearch').value.toLowerCase();
            const categories = document.querySelectorAll('.icon-category');

            categories.forEach(category => {
                const icons = category.querySelectorAll('.icon-example');
                let hasVisibleIcons = false;

                icons.forEach(icon => {
                    const iconText = icon.textContent.toLowerCase();
                    if (iconText.includes(searchTerm)) {
                        icon.style.display = 'inline-block';
                        hasVisibleIcons = true;
                    } else {
                        icon.style.display = 'none';
                    }
                });

                // Kategoriyi gizle/göster
                category.style.display = hasVisibleIcons ? 'block' : 'none';
            });
        }

        // Karakter sayacı
        document.querySelectorAll('input[maxlength], textarea[maxlength]').forEach(input => {
            const maxLength = input.getAttribute('maxlength');
            const helpText = input.parentElement.querySelector('.help-text');

            if (helpText) {
                const originalText = helpText.textContent;

                // Sayfa yüklendiğinde mevcut değeri göster
                updateCounter();

                input.addEventListener('input', updateCounter);

                function updateCounter() {
                    const remaining = maxLength - input.value.length;
                    helpText.textContent = `${originalText} (${remaining} karakter kaldı)`;

                    if (remaining < 50) {
                        helpText.style.color = '#ff4040';
                    } else {
                        helpText.style.color = '#cccccc';
                    }
                }
            }
        });

        // Maddeler Fonksiyonları
        function addMaddelerField(existingValue = '') {
            const wrapper = document.getElementById('maddelerWrapper');
            const noFieldsMsg = document.getElementById('noMaddelerMessage');

            noFieldsMsg.style.display = 'none';

            const fieldDiv = document.createElement('div');
            fieldDiv.className = 'field-item';
            fieldDiv.innerHTML = `
                <input type="text"
                       name="MaddelerFields[${maddelerCounter}]"
                       class="field-input"
                       placeholder="📋 Madde girin (örn: Profesyonel tasarım hizmeti)"
                       maxlength="500"
                       value="${existingValue}"
                       onchange="updateMaddelerCount()" />
                <button type="button" class="btn btn-remove" onclick="removeMaddelerField(this)">
                    🗑️ KALDIR
                </button>
            `;

            wrapper.appendChild(fieldDiv);
            maddelerCounter++;
            updateMaddelerCount();

            if (!existingValue) {
                fieldDiv.querySelector('input').focus();
                fieldDiv.style.animation = 'glow 1s ease-in-out';
            }
        }

        function removeMaddelerField(button) {
            const wrapper = document.getElementById('maddelerWrapper');
            const noFieldsMsg = document.getElementById('noMaddelerMessage');

            button.parentElement.style.animation = 'fadeOut 0.3s ease-out';
            setTimeout(() => {
                button.parentElement.remove();
                if (wrapper.children.length === 0) {
                    noFieldsMsg.style.display = 'block';
                }
                updateMaddelerCount();
            }, 300);
        }

        function updateMaddelerCount() {
            const fields = document.querySelectorAll('#maddelerWrapper .field-item input');
            document.getElementById('maddelerCount').textContent = fields.length;
        }

        // Sayfa yüklendiğinde mevcut maddeleri yükle
        document.addEventListener('DOMContentLoaded', function() {
            // Mevcut maddeleri ekle
            @foreach (var madde in Model.Maddelers)
            {
                    <text>addMaddelerField('@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(madde.Name)');</text>
            }

            // Eğer hiç madde yoksa bir boş alan ekle
            if (maddelerCounter === 0) {
                addMaddelerField();
            }
        });

        // CSS animasyonları
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes fadeOut {
                from { opacity: 1; transform: scale(1); }
                to { opacity: 0; transform: scale(0.8); }
            }
        `;
        document.head.appendChild(style);
    </script>
