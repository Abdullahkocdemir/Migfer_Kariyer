    <script>
        // ====== MOBİL MENÜ FONKSİYONLARI ======

        // Mobil menüyü açıp kapatan ana fonksiyon
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobileMenu'); // Mobil menü elementini seç
            const toggle = document.querySelector('.mobile-menu-toggle'); // Menü açma butonunu seç

            mobileMenu.classList.toggle('active'); // 'active' sınıfını ekle/çıkar (menüyü göster/gizle)
            toggle.classList.toggle('active'); // Buton animasyonu için 'active' sınıfını ekle/çıkar
        }

        // Mobil menüyü kapatan fonksiyon
        function closeMobileMenu() {
            const mobileMenu = document.getElementById('mobileMenu'); // Mobil menü elementini seç
            const toggle = document.querySelector('.mobile-menu-toggle'); // Menü butonunu seç

            mobileMenu.classList.remove('active'); // Menüyü gizle
            toggle.classList.remove('active'); // Buton animasyonunu kaldır
        }

        // Menü dışında bir yere tıklandığında menüyü kapat
        document.addEventListener('click', function(event) {
            const mobileMenu = document.getElementById('mobileMenu');
            const toggle = document.querySelector('.mobile-menu-toggle');

            // Tıklanan yer menü veya buton değilse menüyü kapat
            if (!mobileMenu.contains(event.target) && !toggle.contains(event.target)) {
                closeMobileMenu();
            }
        });

        // ====== SAYFA KAYDIRILDIĞINDA ORTAYA ÇIKMA ANİMASYONLARI ======

        // Sayfada kaydırma yapıldığında elementleri ortaya çıkaran fonksiyon
        function reveal() {
            var reveals = document.querySelectorAll('.reveal'); // Animasyonlu elementleri seç
            for (var i = 0; i < reveals.length; i++) {
                var windowHeight = window.innerHeight; // Pencere yüksekliği
                var elementTop = reveals[i].getBoundingClientRect().top; // Elementin üst konumu
                var elementVisible = 150; // Görünürlük eşiği (piksel)

                // Element görünür alanda mı kontrol et
                if (elementTop < windowHeight - elementVisible) {
                    reveals[i].classList.add('active'); // Animasyonu başlat
                }
            }
        }

        window.addEventListener('scroll', reveal); // Kaydırma olayını dinle
        reveal(); // Sayfa yüklendiğinde de kontrol et

        // ====== YUMUŞAK KAYDIRMA (SMOOTH SCROLLING) ======

        // Navigasyon linklerine yumuşak kaydırma efekti ekle
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault(); // Varsayılan link davranışını engelle
                const target = document.querySelector(this.getAttribute('href')); // Hedef elementi bul
                if (target) {
                    const headerOffset = 80; // Sabit header için boşluk
                    const elementPosition = target.getBoundingClientRect().top; // Element pozisyonu
                    const offsetPosition = elementPosition + window.pageYOffset - headerOffset; // Hesaplanmış pozisyon

                    // Yumuşak kaydırma yap
                    window.scrollTo({
                        top: offsetPosition,
                        behavior: 'smooth'
                    });

                    closeMobileMenu(); // Mobil menü açıksa kapat
                }
            });
        });

        // ====== VİDEO OYNATICI KONTROL ======

        // Video oynatıldığında play butonunu gizle
        document.querySelector('.video-background').addEventListener('play', function() {
            document.querySelector('.play-button').style.opacity = '0';
        });

        // Video duraklatıldığında play butonunu göster
        document.querySelector('.video-background').addEventListener('pause', function() {
            document.querySelector('.play-button').style.opacity = '1';
        });

        // ====== İLETİŞİM FORMU GÖNDERİMİ ======

        // Form gönderildiğinde çalışan fonksiyon
        function submitForm(event) {
            event.preventDefault(); // Sayfa yenilenmesini engelle

            const submitBtn = event.target.querySelector('.submit-btn'); // Gönder butonunu seç
            const originalText = submitBtn.innerHTML; // Butonun orijinal metnini sakla

            // Yükleme durumunu göster
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin" style="margin-right: 8px;"></i>Gönderiliyor...';
            submitBtn.disabled = true; // Butonu devre dışı bırak

            // Form gönderimi simülasyonu (gerçek form işleme ile değiştirilmeli)
            setTimeout(() => {
                // Başarı durumunu göster
                submitBtn.innerHTML = '<i class="fas fa-check" style="margin-right: 8px;"></i>Gönderildi!';
                submitBtn.style.background = 'var(--success-gradient)'; // Yeşil gradient

                event.target.reset(); // Formu temizle

                // Başarı mesajı göster
                alert('Mesajınız başarıyla gönderildi! En kısa sürede size dönüş yapacağız.');

                // 3 saniye sonra butonu eski haline getir
                setTimeout(() => {
                    submitBtn.innerHTML = originalText;
                    submitBtn.style.background = 'var(--primary-gradient)';
                    submitBtn.disabled = false;
                }, 3000);
            }, 2000);
        }

        // ====== PERFORMANS ODAKLI INTERSECTION OBSERVER ======

        // Intersection Observer seçenekleri (performans için)
        const observerOptions = {
            threshold: 0.1, // Elementin %10'u göründüğünde tetikle
            rootMargin: '0px 0px -50px 0px' // Alt kenardan 50px önce tetikle
        };

        // Elementler görünür alana girdiğinde animasyonu başlatan observer
        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) { // Element görünür alandaysa
                    entry.target.classList.add('active'); // Animasyonu başlat
                }
            });
        }, observerOptions);

        // Tüm reveal elementlerini gözlemle
        document.querySelectorAll('.reveal').forEach(el => {
            observer.observe(el);
        });

        // ====== SAYFA YÜKLEME ANİMASYONU ======

        // Sayfa tamamen yüklendiğinde fade-in efekti
        window.addEventListener('load', function() {
            document.body.style.opacity = '0'; // Önce görünmez yap
            document.body.style.transition = 'opacity 0.5s ease'; // Geçiş efekti tanımla

            setTimeout(() => {
                document.body.style.opacity = '1'; // Görünür yap
            }, 100);
        });

        // ====== MOBİL CİHAZ TESPİTİ ======

        // Cihazın mobil olup olmadığını kontrol eden fonksiyon
        function isMobile() {
            return window.innerWidth <= 768; // 768px ve altı mobil kabul edilir
        }

        // ====== MOBİL PERFORMANS OPTİMİZASYONU ======

        // Mobil cihazlarda hover animasyonlarını devre dışı bırak (performans için)
        if (isMobile()) {
            const style = document.createElement('style');
            style.textContent = `
                .service-card:hover,
                .course-card:hover,
                .instructor-card:hover,
                .work-card:hover {
                    transform: none !important; /* Hover animasyonlarını kaldır */
                }
            `;
            document.head.appendChild(style);
        }

        // ====== PARALLAX EFEKTİ (SADECE DESKTOP) ======

        // Desktop cihazlarda parallax (arka plan kaydırma) efekti
        if (!isMobile()) {
            window.addEventListener('scroll', function() {
                const scrolled = window.pageYOffset; // Kaydırılan mesafe
                const parallaxElements = document.querySelectorAll('.bg-animation'); // Parallax elementleri

                parallaxElements.forEach(element => {
                    const speed = 0.5; // Parallax hızı (0-1 arası)
                    element.style.transform = `translateY(${scrolled * speed}px)`; // Y ekseninde kaydır
                });
            });
        }

        // ====== MOBİL DOKUNMA GERİ BİLDİRİMİ ======

        // Dokunmatik cihazlarda butonlara basma efekti
        if ('ontouchstart' in window) {
            document.querySelectorAll('.service-card, .course-card, .instructor-card, .work-card, .btn-large, .submit-btn').forEach(element => {
                // Dokunma başladığında küçült
                element.addEventListener('touchstart', function() {
                    this.style.transform = 'scale(0.98)';
                });

                // Dokunma bittiğinde normale döndür
                element.addEventListener('touchend', function() {
                    this.style.transform = '';
                });
            });
        }

        // ====== RESİMLER İÇİN LAZY LOADING ======

        // Resimleri sadece görünür alana geldiklerinde yükle (performans için)
        if ('IntersectionObserver' in window) {
            const imageObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) { // Resim görünür alandaysa
                        const img = entry.target;
                        img.src = img.dataset.src; // data-src'den gerçek src'ye kopyala
                        img.classList.remove('lazy'); // Lazy sınıfını kaldır
                        imageObserver.unobserve(img); // Gözlemi durdur
                    }
                });
            });

            // data-src özelliği olan tüm resimleri gözlemle
            document.querySelectorAll('img[data-src]').forEach(img => {
                imageObserver.observe(img);
            });
        }

        // ====== KRİTİK KAYNAKLARI ÖN YÜKLEME ======

        // Önemli CSS dosyalarını önceden yükle
        function preloadResources() {
            const link = document.createElement('link');
            link.rel = 'preload'; // Öncelikli yükleme
            link.href = 'https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap';
            link.as = 'style'; // CSS olarak tanımla
            document.head.appendChild(link);
        }

        preloadResources(); // Fonksiyonu çalıştır

        // ====== VİDEO HATA YÖNETİMİ ======

        // Video yüklenemezse gizle
        document.querySelector('.video-background').addEventListener('error', function() {
            console.log('Video failed to load, using fallback background');
            this.style.display = 'none'; // Video elementini gizle
        });

        // ====== KLAVYE NAVİGASYONU ======

        // ESC tuşuna basıldığında mobil menüyü kapat
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeMobileMenu();
            }
        });

        // ====== ERİŞİLEBİLİRLİK İÇİN FOCUS YÖNETİMİ ======

        // Mobil menü açıldığında ilk linke odaklan
        document.querySelector('.mobile-menu-toggle').addEventListener('click', function() {
            setTimeout(() => {
                if (document.getElementById('mobileMenu').classList.contains('active')) {
                    document.querySelector('.mobile-menu a').focus(); // İlk linke odaklan
                }
            }, 100);
        });

        // ====== FORM DOĞRULAMA GELİŞTİRMESİ ======

        // Form alanlarına gerçek zamanlı doğrulama ekle
        document.querySelectorAll('.form-input, .form-textarea, .form-select').forEach(input => {
            // Alan odağını kaybettiğinde doğrula
            input.addEventListener('blur', function() {
                if (this.checkValidity()) {
                    this.style.borderColor = '#4ade80'; // Geçerli = yeşil
                } else if (this.value) {
                    this.style.borderColor = '#ef4444'; // Geçersiz = kırmızı
                }
            });

            // Alan odaklandığında mavi yap
            input.addEventListener('focus', function() {
                this.style.borderColor = 'var(--teal)';
            });
        });

        // ====== METIN ALANI OTOMATİK YENİDEN BOYUTLANDIRMA ======

        // Textarea'ya yazıldıkça yüksekliğini artır
        document.querySelector('#message').addEventListener('input', function() {
            this.style.height = 'auto'; // Önce otomatik yap
            this.style.height = this.scrollHeight + 'px'; // Sonra içeriğe göre ayarla
        });

        // ====== TELEFON NUMARASI FORMATLAMA ======

        // Telefon numarasını Türk formatında formatla: (555) 123 45 67
        document.querySelector('#phone').addEventListener('input', function() {
            let value = this.value.replace(/\D/g, ''); // Sadece rakamları al
            if (value.length >= 10) {
                // Türk telefon formatına çevir
                value = value.replace(/(\d{3})(\d{3})(\d{2})(\d{2})/, '($1) $2 $3 $4');
            }
            this.value = value; // Formatlanmış değeri geri yaz
        });
    </script>
